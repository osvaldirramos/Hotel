WinociMenu MENU
BEGIN
    POPUP "Oracle"
        BEGIN
            MENUITEM "Connect", IDM_ORACLE_CONNECT
            MENUITEM "Disconnect", IDM_ORACLE_DISCONNECT, GRAYED
            MENUITEM "Employees", IDM_ORACLE_EMPLOYEES, GRAYED
        END
    MENUITEM "Exit", IDM_EXIT
END

